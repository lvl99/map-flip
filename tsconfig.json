{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/mapFlip.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "dist"
  ]
}
